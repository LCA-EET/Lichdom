IF
	GlobalLT("XA_LD_MorrisSpawned", "AR0800", 1)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		CreateCreature("XALDGD", [650.1945], NE)
		SetGlobal("XA_LD_MorrisSpawned", "AR0800", 1)
		SetInterrupt(TRUE)
		Continue()
END

IF
	Dead("XALDGD")
	GlobalLT("XA_LD_MorrisKilledInAthkatla", "GLOBAL", 1)
THEN
	RESPONSE #100
		Global("XA_LD_MorrisKilledInAthkatla", "GLOBAL", 1)
		Continue()
END